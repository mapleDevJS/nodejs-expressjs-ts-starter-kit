{
    "name": "nodejs-expressjs-ts-starter-kit",
    "version": "1.0.2",
    "type": "module",
    "description": "A starter kit for building REST APIs using Node.js, Express.js, and TypeScript.",
    "main": "dist/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/mapleDevJS/nodejs-expressjs-ts-starter-kit"
    },
    "license": "MIT",
    "keywords": [
        "rest",
        "api",
        "nodejs",
        "expressjs",
        "typescript",
        "starter-kit"
    ],
    "engines": {
        "node": "^18.18.1",
        "npm": "^9.8.1"
    },
    "scripts": {
        "start": "npm run build && node ./dist/main.js",
        "start:dev": "nodemon",
        "build": "npm run clean && npm run compile",
        "clean": "rimraf dist",
        "compile": "tsc -p tsconfig.json",
        "lint": "eslint src/ --ext .ts",
        "lint:fix": "eslint src/ --ext .ts --fix",
        "format": "prettier . --check",
        "format:fix": "prettier . --write",
        "ts": "ts-node",
        "cli": "npm run ts ./src/cli.ts",
        "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/convict": "^6.1.1",
        "@types/convict-format-with-validator": "^6.0.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/mime-types": "^2.1.1",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.14.8",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "class-transformer": "^0.5.1",
        "eslint": "^8.56.0",
        "eslint-config-htmlacademy": "^10.0.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "json-server": "^1.0.0-beta.1",
        "nodemon": "^3.1.4",
        "pino-pretty": "^11.2.1",
        "prettier": "3.3.2",
        "rimraf": "^5.0.7",
        "ts-node": "^10.9.2",
        "typescript": "5.4.5"
    },
    "dependencies": {
        "@typegoose/typegoose": "^12.10.1",
        "bcrypt": "^5.1.1",
        "chalk": "^5.3.0",
        "class-validator": "^0.14.1",
        "convict": "^6.2.4",
        "convict-format-with-validator": "^6.2.0",
        "cors": "^2.8.5",
        "dayjs": "^1.11.11",
        "dotenv": "16.4.5",
        "express": "^4.21.2",
        "express-async-handler": "^1.2.0",
        "express-rate-limit": "^7.3.1",
        "got": "^12.6.1",
        "http-status-codes": "^2.3.0",
        "inversify": "^6.0.2",
        "jose": "^5.4.1",
        "mime-types": "^2.1.35",
        "mongoose": "^8.9.5",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^5.0.9",
        "pino": "^9.2.0",
        "reflect-metadata": "^0.2.2"
    }
}
